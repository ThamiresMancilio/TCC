
@{
    ViewBag.Title = "Relatório TOP de Produção";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h3><i class="fa fa-angle-right"></i> Relatório TOP de Produção</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Filtros</h4>
            @using (Html.BeginForm("GerarRelatorioTOP", "Relatorio", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
            {
                <fieldset class="form-group">
                    <legend>Filtros de pesquisa</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Data de Produção:</label>
                        <input type="date" class="form-control" id="datProducao" name="datProducao" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">até:</label>
                        <input type="date" class="form-control" id="datProducaoF" name="datProducaoF" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Gerar Relatório</button>
                    </div>
                    <br /><br />
                </fieldset>
            }
        </div>
    </div>
</div>
