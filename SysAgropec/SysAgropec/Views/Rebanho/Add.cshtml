
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h3><i class="fa fa-angle-right"></i> Cadastro de Animal</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            @using (Html.BeginForm("Insert", "Rebanho", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post,new { @class = "form-inline" }))
            {   <fieldset class="form-group">
                    <legend>Dados do Animal</legend>
                    <div class="form-group">
                        <label class="control-label">Nome/Apelido:</label>
                        <input type="text" class="form-control" id="descricao" name="descricao" style="width: 170px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Registro:</label>
                        <input type="text" class="form-control" id="registro" name="registro" style="width: 170px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Tatuagem:</label>
                        <input type="text" class="form-control" id="tatuagem" name="tatuagem" style="width: 170px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Nº brinco:</label>
                        <input type="text" class="form-control" id="numerobrinco" name="numerobrinco" style="width: 170px;">
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label for="exampleInputEmail2">Data de Nascimento:</label>
                        <input type="date" class="form-control" id="datanascimento" name="datanascimento" style="width: 170px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Sexo: </label>
                        <select class="form-control" name="sexo">
                            <option value="0">Macho</option>
                            <option value="1">Fêmea</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Livro: </label>
                        <select class="form-control" name="livro">
                            <option value="0">PO</option>
                            <option value="1">PC</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Raça: </label>
                        <select class="form-control" name="raca">
                            <option value="0">Holandesa</option>
                            <option value="1">Jersey</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="checkbox-inline">
                            <input type="checkbox" id="morto" name="morto" value="1"> Morto
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="checkbox-inline">
                            <input type="checkbox" id="lactacao" name="lactacao" value="1"> Lactação
                        </label>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label for="exampleInputEmail2">Observação:</label>
                        <textarea class="form-control" rows="3" id="observacao" name="observacao" style="width: 100%;"></textarea>
                    </div>
                </fieldset>
                <br /><br />
                <fieldset class="form-group">
                    <legend>Dados Paternos</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Nome/Apelido pai: </label>
                        <input type="text" class="form-control" id="descricaopai" name="descricaopai">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Registro pai: </label>
                        <input type="text" class="form-control" id="registropai" name="registropai">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Tatuagem pai: </label>
                        <input type="text" class="form-control" id="tatuagempai" name="tatuagempai">
                    </div>

                </fieldset>
                <br /><br />
                <fieldset class="form-group">
                    <legend>Dados Maternos</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Nome/Apelido mãe: </label>
                        <input type="text" class="form-control" id="descricaomae" name="descricaomae">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Registro mãe: </label>
                        <input type="text" class="form-control" id="registromae" name="registromae">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Tatuagem mãe: </label>
                        <input type="text" class="form-control" id="tatuagemae" name="tatuagemae">
                    </div>
                </fieldset>
                <br><br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>
                <!--<button type="submit" class="btn btn-theme">Sign in</button>-->
            }
        </div><!-- /form-panel -->
    </div>
</div>
