@model IEnumerable<SysAgropec.Models.AnimalViewModel>

@{
    ViewBag.Title = "Consulta Rebanho";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@Styles.Render("~/bundles/paging")   
<h3><i class="fa fa-angle-right"></i> Consultar animais</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Filtros</h4>
            @using (Html.BeginForm("ListWithParameters", "Animal", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
            {   <fieldset class="form-group">
                    <legend>Filtros de pesquisa</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Registro:</label>
                        <input type="text" class="form-control" id="registro" name="registro" style="width: 100px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">à:</label>
                        <input type="text" class="form-control" id="registro2" name="registro2" style="width: 100px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Tatuagem:</label>
                        <input type="text" class="form-control" id="tatuagem" name="tatuagem" style="width: 100px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Data de Nascimento:</label>
                        <input type="date" class="form-control" id="datanascimento" name="datanascimento" style="width: 165px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">à:</label>
                        <input type="date" class="form-control" id="datanascimento2" name="datanascimento2" style="width: 165px;">
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label class="control-label">Apelido:&nbsp;&nbsp;</label>
                        <input type="text" class="form-control" id="descricao" name="descricao" style="width: 218px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Livro: </label>
                        <select class="form-control">
                            <option value="0">PO</option>
                            <option value="1">PC</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Raça: </label>
                        <select class="form-control">
                            <option value="0">Holandesa</option>
                            <option value="1">Jersey</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Sexo:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </label>
                        <select class="form-control" style="width: 100px;">
                            <option value="0">Macho</option>
                            <option value="1">Fêmea</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="checkbox-inline">
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <input type="checkbox" id="morto" name="morto" value="1"> Morto
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Consultar</button>
                    </div>
                    <br /><br />
                </fieldset>
            }

        </div><!-- /form-panel -->

        <table id="easyPaginate" class="table table-bordered table-striped table-condensed">
            <thead>

            <th>Apelido</th>
            <th>Registro</th>
            <th>Tatuagem</th>
            <th>Raça.</th>
            <th>Opções</th>

            </thead>
            <tbody>
            @if (Model != null)
            {
                foreach (var animal in Model)
                {
                <tr class="line">
                    <td>@animal.Descricao</td>
                    <td>@animal.Registro</td>
                    <td>@animal.Tatuagem</td>
                    <td>@animal.nomeraca</td>
                    <td>
                        <button class="btn btn-success btn-xs" title="Visualizar dados" data-toggle="modal" data-target="#myModal"><i class="fa fa-eye"></i></button>
                        <a href="#" class="btn btn-primary btn-xs" onclick="Alterar(@animal.ID)" title="Alterar Registro"><i class="fa fa-pencil"></i></a>
                        <a href="#" class="btn btn-danger btn-xs" onclick="ConfirmaExclusao(@animal.ID, '@animal.Descricao')" title="Excluir Registro"><i class="fa fa-trash-o "></i></a>
                    </td>
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Dados do animal @animal.Descricao</h4>
                                </div>
                                <div class="modal-body">
                                    <p><b>Pai:</b> @animal.Descricaopai - @animal.Registropai <b>Tat:</b>@animal.Tatuagempai | <b>Mãe: </b>@animal.Descricaomae - @animal.Registromae <b>Tat:</b>@animal.Tatuagemae </p>
                                    <p><b>Nº brinco:</b> 213 | <b>Morto:</b> Não <b>Raça:</b>@animal.nomeraca | <b>Livro: </b>PC <b>Cadastrado em:</b>06/08/2017 </p>
                                    <p><b>Dias em lactação: 28</b>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </tr>}
            
            }
            else
            {
            <tr class="line">
                <td colspan="5">
                    Nenhum registro localizado.
                </td>
            </tr>
            }
            </tbody>
        </table>

        <input type="hidden" id="idAnimal" />

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Alerta de Exclusão</h4>
                    </div>
                    <div class="modal-body">
                        <p id="msg"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                        <a href="#" onclick="DeleteAnimal()" class="btn btn-primary">Excluir</a>
                    </div>
                </div>

            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal2" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Mensagem</h4>
                    </div>
                    <div class="modal-body">
                        <p>Registro excluído com sucesso.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
                    </div>
                </div>

            </div>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="myModalEditAnimal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Alterando</h4>
                    </div>
                    <div class="modal-body" id="myModalBodyAnimal">


                    </div>
                    <div class="modal-footer">

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

