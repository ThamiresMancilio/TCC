@{
    ViewBag.Title = "Consulta Rebanho";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@Styles.Render("~/bundles/paging")   
<h3><i class="fa fa-angle-right"></i> Consultar animais</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Filtros</h4>
            <form class="form-inline" role="form">
                <fieldset class="form-group">
                    <legend>Filtros de pesquisa</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Registro:</label>
                        <input type="text" class="form-control" id="registro" name="registro" style="width: 100px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">à:</label>
                        <input type="text" class="form-control" id="registro2" name="registro2" style="width: 100px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Tatuagem:</label>
                        <input type="text" class="form-control" id="tatuagem" name="tatuagem" style="width: 100px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Data de Nascimento:</label>
                        <input type="date" class="form-control" id="datanascimento" name="datanascimento" style="width: 165px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">à:</label>
                        <input type="date" class="form-control" id="datanascimento2" name="datanascimento2" style="width: 165px;">
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label class="control-label">Apelido:&nbsp;&nbsp;</label>
                        <input type="text" class="form-control" id="descricao" name="descricao" style="width: 218px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Livro: </label>
                        <select class="form-control">
                            <option value="0">PO</option>
                            <option value="1">PC</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Raça: </label>
                        <select class="form-control">
                            <option value="0">Holandesa</option>
                            <option value="1">Jersey</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Sexo:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </label>
                        <select class="form-control" style="width: 100px;">
                            <option value="0">Macho</option>
                            <option value="1">Fêmea</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="checkbox-inline">
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <input type="checkbox" id="morto" name="morto" value="1"> Morto
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Consultar</button>
                    </div>
                    <br /><br />
                </fieldset>
            </form>

        </div><!-- /form-panel -->

        <table id="easyPaginate" class="table table-bordered table-striped table-condensed">
            <thead>

            <th>Apelido</th>
            <th>Registro</th>
            <th>Tatuagem</th>
            <th>Data de Nasc.</th>
            <th>Opções</th>

            </thead>
            <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr class="line">
                    <td>@Model.Rows[i][1]</td>
                    <td>@Model.Rows[i][2]</td>
                    <td>@Model.Rows[i][3]</td>
                    <td>@Model.Rows[i][5].ToString("dd/MM/yyyy")</td>
                    <td>
                        <button class="btn btn-success btn-xs" title="Visualizar dados" data-toggle="modal" data-target="#myModal"><i class="fa fa-check"></i></button>
                        <button class="btn btn-primary btn-xs" title="Alterar Registro"><i class="fa fa-pencil"></i></button>
                        <button class="btn btn-danger btn-xs" title="Excluir Registro"><i class="fa fa-trash-o "></i></button>
                    </td>
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Dados do animal @Model.Rows[i][1]</h4>
                                </div>
                                <div class="modal-body">
                                    <p><b>Pai:</b> @Model.Rows[i][12] - @Model.Rows[i][10] <b>Tat:</b>@Model.Rows[i][11] | <b>Mãe: </b>@Model.Rows[i][15] - @Model.Rows[i][13] <b>Tat:</b>@Model.Rows[i][14] </p>
                                    <p><b>Nº brinco:</b> @Model.Rows[i][4] | <b>Morto:</b> Não <b>Raça:</b>Jersey | <b>Livro: </b>PC <b>Cadastrado em:</b>22/06/2017 </p>
                                    <p><b>Em lactação:</b> Sim | <b>Dias em lactação:</b> 15 <b>Em lactação desde:</b> 22/06/2017  </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </tr>}
            </tbody>
        </table>
    </div>
</div>

