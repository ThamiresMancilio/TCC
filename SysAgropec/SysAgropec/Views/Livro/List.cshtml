@{
    ViewBag.Title = "Consulta Rebanho";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@Styles.Render("~/bundles/paging")
<h3><i class="fa fa-angle-right"></i> Consultar livros</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Filtros</h4>
            <form class="form-inline" role="form">
                <fieldset class="form-group">
                    <legend>Filtros de pesquisa</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Descrição:</label>
                        <input type="text" class="form-control" id="descricao" name="descricao" style="width: 100px;">
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Consultar</button>
                    </div>
                    <br /><br />
                </fieldset>
            </form>

        </div><!-- /form-panel -->

        <table id="easyPaginate" class="table table-bordered table-striped table-condensed">
            <thead>

            <th>Descrição</th>
            <th>Opções</th>

            </thead>
            <tbody>
                @for (int i = 0; i < Model.Rows.Count; i++)
            {
                    <tr class="line">
                        <td>@Model.Rows[i][1]</td>
                        <td>
                            <button class="btn btn-primary btn-xs" title="Alterar Registro"><i class="fa fa-pencil"></i></button>
                            <button class="btn btn-danger btn-xs" title="Excluir Registro"><i class="fa fa-trash-o "></i></button>
                        </td>
                        
                    </tr>}
            </tbody>
        </table>
    </div>
</div>


 
