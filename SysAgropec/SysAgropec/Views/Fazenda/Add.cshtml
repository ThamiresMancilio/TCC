@model SysAgropec.Models.FazendaViewModel
@{
    ViewBag.Title = "Adicionar Fazenda";
    Layout = "~/Views/Shared/Layout.cshtml";
    
}

@*@Styles.Render("~/bundles/fileinput")
@Scripts.Render("~/bundles/jquery-fileinput")*@
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/Fazenda")

<h3><i class="fa fa-angle-right"></i> Cadastro de Fazendas</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            @using (Html.BeginForm("Insert", "Fazenda", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline", enctype = "multipart/form-data" }))
            {    <fieldset class="form-group">
                    <legend>Dados da Fazenda</legend>
                    <div class="form-group">
                        <label class="control-label">CNPJ:</label>
                        @Html.TextBoxFor(model => model.Cnpj, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Razão Social:</label>
                        @Html.TextBoxFor(model => model.Razaosocial, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Nome Fantasia:</label>
                        @Html.TextBoxFor(model => model.Nomefantasia, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Inscrição Municipal:</label>
                        @Html.TextBoxFor(model => model.Inscricaomunicipal, new { @class = "form-control" })
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label for="exampleInputEmail2">Inscrição Estadual:</label>
                        @Html.TextBoxFor(model => model.Inscricaoestadual, new { @class = "form-control" })
                    </div>

                </fieldset>
                <br /><br />
                <fieldset class="form-group">
                    <legend>Endereço</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">CEP: </label>
                        @Html.TextBoxFor(model => model.Cep, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Logradouro: </label>
                        @Html.TextBoxFor(model => model.Logradouro, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Nº: </label>
                        @Html.TextBoxFor(model => model.Numero, new { @class = "form-control" })
                    </div>


                    <div class="form-group">
                        <label for="exampleInputPassword2">Complemento: </label>
                        @Html.TextBoxFor(model => model.Complemento, new { @class = "form-control"})
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Bairro: </label>
                       @Html.TextBoxFor(model => model.Bairro, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Cidade: </label>
                        @Html.TextBoxFor(model => model.Cidade, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Estado: </label>
                        @Html.TextBoxFor(model => model.Estado, new { @class = "form-control", required = "required" })
                    </div>
                </fieldset>
                <br><br>
                
                <fieldset class="form-group">
                    <legend>Contato</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Email: </label>
                        @Html.TextBoxFor(model => model.email, new { @class = "form-control", required = "required", type="email" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">2º Email: </label>
                        @Html.TextBoxFor(model => model.email2, new { @class = "form-control", type = "email" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Telefone: </label>
                        @Html.TextBoxFor(model => model.telefone, new { @class = "form-control" , required="required" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword2">2º Telefone: </label>
                        @Html.TextBoxFor(model => model.telefone2, new { @class = "form-control" })
                    </div>
                    <br><br>
                    
                </fieldset>
                <br><br>
                <label for="exampleInputPassword2">Logo: (Arquivos permitidos: JPG, GIF, PNG)</label>

                //@Html.TextBoxFor(model => model.Logo, new { @class="file", type="file", accept=".jpg,.gif,.png"})
                
                @Html.TextBoxFor(model => model.Logo, new { @class = "file", type = "file", accept = ".jpg,.gif,.png" })
                
                @*<input type="file" id="imagem" class="form-control">*@
                
                <br><br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>
            }

        </div>
    </div>
</div>