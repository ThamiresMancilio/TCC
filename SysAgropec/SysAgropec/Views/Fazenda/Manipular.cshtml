@{
    ViewBag.Title = "Escolha uma fazenda";
    Layout = "~/Views/Shared/LayoutClean.cshtml";
}

<div id="form-container">
    <div class="panel" id="form-box">
        @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <h2 class="text-center" id="titulo"> Escolha uma das fazendas para administrar</h2>

            <div class="form-group">
                <select class="form-control" style="">
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <option value="@Model.Rows[i][0]">@Model.Rows[i][3]</option>

                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Entrar">

            </div>
        }
    </div>
</div>
