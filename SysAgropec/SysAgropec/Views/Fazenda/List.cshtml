
@{
    ViewBag.Title = "Consulta Fazenda";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@Styles.Render("~/bundles/paging")
<h3><i class="fa fa-angle-right"></i> Consultar Fazenda</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Filtros</h4>
            <form class="form-inline" role="form">
                <fieldset class="form-group">
                    <legend>Filtros de pesquisa</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">CNPJ:</label>
                        <input type="text" class="form-control" id="cnpj" name="cnpj" style="width: 100px;">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Consultar</button>
                    </div>
                    
                </fieldset>
            </form>

        </div><!-- /form-panel -->

        <table id="easyPaginate" class="table table-bordered table-striped table-condensed">
            <thead>

            <th>CNP</th>
            <th>Razão</th>
            <th>Logradouro</th>
            <th>Opções</th>

            </thead>
            <tbody>
                @foreach (var f in Model)
            {
                    <tr class="line">
                        <td>@f.Cnpj</td>
                        <td>@f.Razaosocial</td>
                        <td>@f.Nomefantasia</td>
                        <td>
                            <button class="btn btn-primary btn-xs" title="Alterar Registro"><i class="fa fa-pencil"></i></button>
                            <button class="btn btn-danger btn-xs" title="Excluir Registro"><i class="fa fa-trash-o "></i></button>
                        </td>
                    </tr>}
            </tbody>
        </table>
    </div>
</div>

