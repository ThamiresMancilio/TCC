
@{
    ViewBag.Title = "Add";
}
<h3><i class="fa fa-angle-right"></i> Cadastro de Medicamento</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            <form class="form-inline" role="form">
                <fieldset class="form-group">
                    <legend>Dados do medicamento</legend>
                    <div class="form-group">
                        <label class="control-label">Nome:</label>
                        <input type="text" class="form-control" id="nome" name="nome" style="width: 170px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Descrição:</label>
                        <input type="text" class="form-control" id="descricao" name="descricao" style="width: 170px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Dias de carência:</label>
                        <input type="text" class="form-control" id="carencialeite" name="carencialeite" style="width: 170px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Lote: </label>
                        <select class="form-control">
                            <option value="0">Lote1</option>
                            <option value="1">Lote2</option>
                        </select>
                    </div>
                </fieldset>
                <br><br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>
                <!--<button type="submit" class="btn btn-theme">Sign in</button>-->
            </form>

        </div><!-- /form-panel -->
    </div>
</div>
