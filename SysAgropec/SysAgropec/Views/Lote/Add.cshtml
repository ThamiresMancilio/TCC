
@{
    ViewBag.Title = "Add";
}

<h3><i class="fa fa-angle-right"></i> Cadastro de Lote</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            <form class="form-inline" role="form">
                <fieldset class="form-group">
                    <legend>Dados do lote</legend>
                    <div class="form-group">
                        <label class="control-label">Nº:</label>
                        <input type="text" class="form-control" id="numerolote" name="numerolote" style="width: 170px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Data fabricação:</label>
                        <input type="date" class="form-control" id="datafabricacao" name="datafabricacao" style="width: 170px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Data validade:</label>
                        <input type="date" class="form-control" id="datavalidade" name="datavalidade" style="width: 170px;">
                    </div>
                </fieldset>

                <br><br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>
                <!--<button type="submit" class="btn btn-theme">Sign in</button>-->
            </form>

        </div><!-- /form-panel -->
    </div>
</div>
