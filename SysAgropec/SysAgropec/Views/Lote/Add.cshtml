@model SysAgropec.Models.Lote

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h3><i class="fa fa-angle-right"></i> Cadastro de Lote</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            @using (Html.BeginForm("Insert", "Lote", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
            {  <fieldset class="form-group">
                    <legend>Dados do lote</legend>
                    <div class="form-group">
                        <label class="control-label">Nº:</label>
                        @Html.TextBoxFor(model => model.Numerolote, new { @class = "form-control", required = "required" })
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Data fabricação:</label>
                        @Html.TextBoxFor(model => model.Datafabricacao, new { @class = "form-control", type = "date", required = "required" })
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Data validade:</label>
                        @Html.TextBoxFor(model => model.Datavalidade, new { @class = "form-control", type = "date", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Observação:</label>
                        @Html.TextBoxFor(model => model.Observacao, new { @class = "form-control" })
                    </div>
                </fieldset>

                <br><br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>

            }

        </div><!-- /form-panel -->
    </div>
</div>
