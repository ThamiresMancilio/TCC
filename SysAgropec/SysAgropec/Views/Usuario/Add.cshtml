
@{
    ViewBag.Title = "Add";
}

<h3><i class="fa fa-angle-right"></i> Cadastro de Usuário</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            <form role="form">
                <fieldset class="form-group">
                    <legend>Dados do Usuário</legend>
                    <div class="form-group">
                        <label class="control-label">Nome:</label>
                        <input type="text" class="form-control" id="nome" name="nome" style="width: 200px;">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword2">Sobrenome:</label>
                        <input type="text" class="form-control" id="sobrenome" name="sobrenome" style="width: 200px;">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail2">Login:</label>
                        <input type="text" class="form-control" id="login" name="login" style="width: 200px;">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Senha:</label>
                        <input type="password" class="form-control" id="senha" name="senha" style="width: 200px;">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword2">Digite novamente a senha:</label>
                        <input type="password" class="form-control" id="senha2" name="senha2" style="width: 200px;">
                    </div>

                </fieldset>

                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>
                <!--<button type="submit" class="btn btn-theme">Sign in</button>-->
            </form>

        </div><!-- /form-panel -->
    </div>
</div>
