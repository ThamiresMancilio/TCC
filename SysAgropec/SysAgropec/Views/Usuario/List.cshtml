
@{
    ViewBag.Title = "Consultar usuário";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@Styles.Render("~/bundles/paging")

@Scripts.Render("~/bundles/Usuario")
<h3><i class="fa fa-angle-right"></i> Consultar usuário</h3>
<div class="row mt">
    <div class="col-lg-12">
        <table id="easyPaginate" class="table table-bordered table-striped table-condensed">
            <thead>

            <th>Usuário</th>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Cadastrado em</th>
            <th>Ações</th>
            </thead>
            <tbody>
            @if (Model != null)
            {
                foreach (var user in Model)
                {
                <tr class="line" id="row_@user.ID">
                    <td>@user.Login</td>
                    <td>@user.Nome </td>
                    <td>@user.Sobrenome</td>
                    <td>@user.Datacadastro.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a href="#" class="btn btn-primary btn-xs" onclick="AlterarFazendasParticipantes(@user.ID)" title="Visualizar Fazendas Participantes"><i class="fa fa-check"></i></a>

                        <a href="#" class="btn btn-danger btn-xs" onclick="ConfirmaExclusao(@user.ID, '@user.Nome')" title="Excluir Usuário"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>}
                }
                else
                {
                    <tr class="line">
                        <td colspan="5">
                            Nenhum registro localizado.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <input type="hidden" id="idUsuario" />

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Alerta de Exclusão</h4>
                    </div>
                    <div class="modal-body">
                        <p id="msg"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                        <a href="#" onclick="DeleteUsuario()" class="btn btn-primary">Excluir</a>
                    </div>
                </div>

            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal2" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Mensagem</h4>
                    </div>
                    <div class="modal-body">
                        <p>Registro excluído com sucesso.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModalEditUsuario" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Alterando</h4>
                    </div>
                    <div class="modal-body" id="myModalBodyUsuario">


                    </div>
                    <div class="modal-footer">

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
