@model SysAgropec.Models.Raca

<div>

    <form id="myForm" class="form-inline">
        @Html.HiddenFor(m => m.ID)

        <label class="control-label">Descrição:</label>
        @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", required = "required" })

        <a href="#" id="btnSubmit" class="btn btn-primary">Salvar </a>

    </form>

</div>


<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function () {

            var myformdata = $("#myForm").serialize();

            $.ajax({

                type: "POST",
                url: "Update",
                data: myformdata,
                success: function () {

                    $("#myModalEditRaca").modal("hide");
                    window.location.href = "/Raca/List";

                }

            })
        })

    })


</script>


