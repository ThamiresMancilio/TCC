@model SysAgropec.Models.UsuarioViewModel
@{
    ViewBag.Title = "Adicionar Usuário";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h3><i class="fa fa-angle-right"></i> Cadastro de Usuário</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            @using (Html.BeginForm("Insert", "Usuario", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
            {   <fieldset class="form-group">
                    <legend>Dados do Usuário</legend>
                    <div class="form-group">
                        <label class="control-label">Nome:</label>
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword2">Sobrenome:</label>
                    @Html.TextBoxFor(model => model.Sobrenome, new { @class = "form-control", required = "required" })
                        
                    </div>

                    <div class="form-group">
                        <label class="checkbox-inline">
                            <input type="checkbox" id="Admin" name="Admin" value="1"> Administrador
                        </label>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label for="exampleInputEmail2">Login:</label>
                        @Html.TextBoxFor(model => model.Login, new { @class = "form-control", required = "required" })
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Senha:</label>
                        @Html.PasswordFor(model => model.Senha, new { @class = "form-control", required = "required" })
                        
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword2">Digite novamente a senha:</label>
                        
                        <input type="password" class="form-control" id="senha2" name="senha2">
                    </div>

                </fieldset>
                <br /><br />
                <fieldset class="form-group">
                    <legend>Fazendas Participantes</legend>
                    
                    @foreach (var fazenda in ViewData["fazendas"] as List<SysAgropec.Models.FazendaViewModel>)
                    {

                        
                        <label class="checkbox-inline">
                            <input type="checkbox" name="row_@fazenda.ID" checked="checked" id="@fazenda.ID" value="@fazenda.ID"> @fazenda.Razaosocial
                        </label>
                        <hr>
                        
                    }
                </fieldset>
                <br /><br />
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>
                
            }

        </div>
    </div>
</div>
