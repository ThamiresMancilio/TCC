
@{
    ViewBag.Title = "Meu Usuário";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h3><i class="fa fa-angle-right"></i> Meu Usuário</h3>
<div class="row mt">
    <div class="col-lg-12">
@using (Html.BeginForm("My_User_Edit", "Usuario", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
{
        <div class="darkblue-panel pn">
            @foreach (var user in Model)
            {
            <div class="darkblue-header">
                <h5>@user.Nome @user.Sobrenome</h5>
            </div>
            <h1 class="mt"><i class="fa fa-user fa-3x"></i></h1>
            <p>Login de acesso: @user.Login</p>
            <footer>
                <div class="centered">
                    <h5> Cadastrado em: @user.Datacadastro.ToString("dd/MM/yyyy")</h5>
                </div>
            </footer>
            <input type="hidden" value="@user.ID" id="iduser" name="iduser" />
            <input type="submit" value="Alterar Dados"/>
        }
        </div>
}
    </div>
</div>
