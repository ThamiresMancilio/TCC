
@{
    ViewBag.Title = "Gráfico de Produção Anual";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h3><i class="fa fa-angle-right"></i> Gráfico de Produção Anual</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Filtros</h4>
            @using (Html.BeginForm("Show", "Grafico", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
            {
                <fieldset class="form-group">
                    <legend>Filtros de pesquisa</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Ano:</label>
                        <input type="number" class="form-control" id="AnoIni" name="AnoI" value="2017" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">até:</label>
                        <input type="number" class="form-control" id="AnoF" name="AnoF" value="2017" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Gerar Gráfico</button>
                    </div>
                    <br /><br />
                </fieldset>
            }
        </div>
    </div>
</div>
