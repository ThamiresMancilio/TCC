
@{
    ViewBag.Title = "Relatório de Animais por raça";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h3><i class="fa fa-angle-right"></i> Relatório de Animais por Raça</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Filtros</h4>
            @using (Html.BeginForm("GerarRelatorioAnimais", "Relatorio", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
            {
                <fieldset class="form-group">
                    <legend>Filtros de pesquisa</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Data de Cadastro:</label>
                        <input type="date" class="form-control" id="datCadastro" name="datCadastro" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">até:</label>
                        <input type="date" class="form-control" id="datCadastrof" name="datCadastrof" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Gerar Relatório</button>
                    </div>
                    <br /><br />
                </fieldset>
            }
        </div>
    </div>
</div>
