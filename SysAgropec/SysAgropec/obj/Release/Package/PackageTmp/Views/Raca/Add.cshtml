@model SysAgropec.Models.RacaViewModel
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h3><i class="fa fa-angle-right"></i> Cadastro de Raça</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            @using (Html.BeginForm("Insert", "Raca", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
            {
                <div class="form-group">
                    <label class="control-label">Descrição:</label>
                    @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", required = "required" })
                </div>
                <br><br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>
            }
        </div>
    </div>
</div>
