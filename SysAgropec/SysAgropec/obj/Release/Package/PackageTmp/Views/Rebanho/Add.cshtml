@model SysAgropec.Models.AnimalViewModel
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@Scripts.Render("~/bundles/Animal")
<h3><i class="fa fa-angle-right"></i> Cadastro de Animal</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            @using (Html.BeginForm("Insert", "Rebanho", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post,new { @class = "form-inline" }))
            {   <fieldset class="form-group">
                    <legend>Dados do Animal</legend>
                    <div class="form-group">
                        <label class="control-label">Nome/Apelido:</label>
                        @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Registro:</label>
                        @Html.TextBoxFor(model => model.Registro, new { @class = "form-control" })
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Tatuagem:</label>
                        @Html.TextBoxFor(model => model.Tatuagem, new { @class = "form-control" })
                      
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Nº brinco:</label>
                        @Html.TextBoxFor(model => model.Numerobrinco, new { @class = "form-control" })
                        
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label for="exampleInputEmail2">Data de Nascimento:</label>
                        @Html.TextBoxFor(model => model.Datanascimento, new { @class = "form-control", type = "date" })
                       
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword2">Sexo: </label>
                        <select class="form-control" name="Sexo" id="Sexo">
                            <option value="0">Macho</option>
                            <option value="1">Fêmea</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Livro: </label>
                        @Html.DropDownListFor(model => model.Livro_ID, ViewBag.LivroLista as SelectList, "Escolha uma opção", new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Raça: </label>
                        @Html.DropDownListFor(model => model.Raca_ID, ViewBag.RacaLista as SelectList, "Escolha uma opção", new { @class = "form-control", required = "required" })
                        
                    </div>
                    <div class="form-group">
                        <label class="checkbox-inline">
                            
                            <input type="checkbox" id="Morto" name="Morto"> Morto
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="checkbox-inline">
                           
                            <input type="checkbox" id="Lactacao" name="Lactacao"> Lactação
                        </label>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label for="exampleInputEmail2">Observação:</label>
                        @Html.TextAreaFor(model => model.Observacao, new { @class = "form-control", rows="3",
                       style = "width: 100%" })

                    </div>
                </fieldset>
                <br /><br />
                <fieldset class="form-group">
                    <legend>Dados Paternos</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Nome/Apelido pai: </label>
                        @Html.TextBoxFor(model => model.Descricaopai, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Registro pai: </label>
                        @Html.TextBoxFor(model => model.Registropai, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Tatuagem pai: </label>
                        @Html.TextBoxFor(model => model.Tatuagempai, new { @class = "form-control" })
                    </div>

                </fieldset>
                <br /><br />
                <fieldset class="form-group">
                    <legend>Dados Maternos</legend>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Nome/Apelido mãe: </label>
                        @Html.TextBoxFor(model => model.Descricaomae, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Registro mãe: </label>
                        @Html.TextBoxFor(model => model.Registromae, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Tatuagem mãe: </label>
                        @Html.TextBoxFor(model => model.Tatuagemae, new { @class = "form-control" })
                    </div>
                </fieldset>
                <input type="hidden" id="lactacao" />
                <input type="hidden" id="datalactacao" />
                <br><br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>
                
            }
        </div><!-- /form-panel -->
    </div>
</div>
