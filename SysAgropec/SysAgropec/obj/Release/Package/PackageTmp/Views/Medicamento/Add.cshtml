@model SysAgropec.Models.MedicamentoViewModel
@{
    ViewBag.Title = "Adicionar Medicamento";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h3><i class="fa fa-angle-right"></i> Cadastro de Medicamento</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Preencha os campos para efetuar o cadastro.</h4>
            @using (Html.BeginForm("Insert", "Medicamento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
            {    <fieldset class="form-group">
                    <legend>Dados do medicamento</legend>
                    <div class="form-group">
                        <label class="control-label">Nome:</label>
                       @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Descrição:</label>
                        @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Dias de carência:</label>
                        @Html.TextBoxFor(model => model.Carencialeite, new { @class = "form-control", required = "required", type="number" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2">Lote: </label>
                        @Html.DropDownListFor(model => model.Lote_ID, ViewBag.LoteList as SelectList, "Escolha uma opção", new { @class = "form-control", required="required" })
                    </div>
                </fieldset>
                <br><br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Incluir</button>
                </div>
                <!--<button type="submit" class="btn btn-theme">Sign in</button>-->
            }

        </div><!-- /form-panel -->
    </div>
</div>
